{
  "manifest_version": 3,
  "name": "FuckTorial",
  "version": "0.5",
  "description": "Fuck the Factorial! \nExtension to automate clock-in shifting.",
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "permissions": ["declarativeNetRequestWithHostAccess", "activeTab"],
  "host_permissions": [
    "*://app.factorialhr.com/*",
    "*://api.factorialhr.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
